<!-- views/urls_show.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>TinyApp</title>
  <style>
      a:link {
      color: lightseagreen; 
      background-color: transparent; 
      text-decoration: none;
      }
      a:hover {
      color: plum;
      }
  </style>
</head>
<body style="font-size:20px; padding:50px;">

  <% include partials/_header %>
    
  <div>
    Short URL: <a href=<%=`/u/${shortURL}`%>><%= shortURL %></a>
  </div>
  <div>
    Long URL: <%= urls[shortURL].longURL %>
  </div>
  <div>
    <p>This link has been visited <%= urls[shortURL].visitCount %> times by <%= urls[shortURL].uniqueVisitCount %> unique <% if (urls[shortURL].uniqueVisitCount === 1) { %> visitor<% } else { %> visitors<% } %>.</p>
  </div>
  
  <form method="POST" style="margin:150px;" action=<%=`/urls/${shortURL}?_method=PUT`%>>
    <label for="longURL">Change long URL:</label>
    <input id="longURL" type="text" name="longURL" style="width: 300px" value=<%= urls[shortURL].longURL %> >
    <input type="submit" value="Update">
  </form>

  <a href="/urls/new">Add a new URL</a>

</body>
</html>