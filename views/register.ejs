<!-- views/register.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>TinyApp</title>
  <style>
      a:link {
      color: lightseagreen; 
      background-color: transparent; 
      text-decoration: none;
      }
      a:hover {
      color: plum;
      }
  </style>
</head>
<body style="font-size:20px; padding:50px;">

    <% include partials/_header %>

  <h1>Register</h1>

    <form action="/register" method="POST">
        <label for="email">Enter your email:</label>
        <input id="email" type="text" name="email" placeholder="email@domain.com" style="width: 300px">
        <label for="password">Enter your password:</label>
        <input id="password" type="text" name="password" placeholder="password" style="width: 300px">
      <input type="submit" value="Submit">
    </form>

</body>
</html>