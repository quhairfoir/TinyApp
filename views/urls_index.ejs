<!-- views/urls_index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>TinyApp</title>
</head>
<body style="font-size:20px; padding:50px;">
    <% include partials/_header %>

    <ul>
      <% for (let shortURL in urls) { %>
      <li>
        URL: <%= urls[shortURL] %> and short form: <%= shortURL %>
      </li>
        <a href="/urls/<%= shortURL %>">Edit</a>
        <form method="POST" action=<%=`/urls/${shortURL}/delete`%> >
          <input type="submit" value="Delete">
        </form>
      <% }; %>
      <li><a href="#">Shorten your URL!</a></li>
    </ul>

</body>
</html>